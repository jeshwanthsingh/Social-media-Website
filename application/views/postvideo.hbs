<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Post Video</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="/public/css/postvideo.css" /> 
    </head>
    <body>
        {{> header}}
        {{> navbar}}
       
        <main>
            <section class="post-video">
                <h1>Post video</h1>

                {{#each posts}}
                    <div class="post">
                        <h2 class="post-title">{{this.title}}</h2>
                        <p class="post-description">{{this.description}}</p>

                        <div class="post-video">
                            <video controls>
                                <source src="{{this.filePath}}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>

                        <div class="post-controls">
                            <a href="/posts/{{this.id}}/edit" class="post-edit">Edit post</a>

                            <form action="/posts/{{this.id}}/delete" method="post">
                                <input type="submit" value="Delete" class="post-delete">
                            </form>
                        </div>
                    </div>
                {{/each}}

                <form action="/postvideo" method="POST" enctype="multipart/form-data" class="post-form">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>

                    <label for="content">Description:</label>
                    <textarea id="content" name="content" required></textarea>
                    
                    <input type="hidden" id="userId" name="userId" value="{{userId}}">

                    <label for="video-file">Video:</label>
                    <input type="file" id="video-file" name="video-file" accept="video/*" required>

                    <label for="policy-agreement">Acceptable Use Policy:</label>
                    <input type="checkbox" id="policy-agreement" name="policy-agreement" required>
                    <label for="policy-agreement">I agree to the Acceptable Use Policy for uploading videos.</label>

                    <input type="submit" value="Submit" class="submit-button">
                </form>
            </section>
        </main>

        {{> footer}}
        <script src="" async defer></script>
    </body>
</html>
