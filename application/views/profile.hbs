<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Profile</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="/public/css/profile.css" /> 
    </head>
    <body>
        {{> header}}
        {{> navbar}}

        <main class="main-content">
            <h1>User Profile</h1>

            {{#if success_msg}}
                <div class="alert alert-success">
                    {{success_msg}}
                </div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger">
                    {{error_msg}}
                </div>
            {{/if}}

            <div class="user-info">
                <h2>Username: {{user.username}}</h2>
                <p>Email: {{user.email}}</p>
            </div>

            <h3>My Posts:</h3>

            <form action="/search" method="GET" class="search-form">
                <input type="text" id="searchTerm" name="q" required>
                <input type="submit" value="Search">
            </form>

            <div class="posts">
                {{#each posts}}
                    <div class="post">
                        <h3><a href="/viewpost/{{this.id}}">{{this.title}}</a></h3>
                        <p>Posted on: {{this.createdAt}}</p>
                        <video width="320" height="240" controls>
                            <source src="{{this.filePath}}" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        <div class="post-actions">
                            <a href="/edit/{{this.id}}" class="edit-button">Edit</a>
                            <form action="/deletepost/{{this.id}}" method="POST" class="delete-form">
                                <button type="submit" class="delete-button">Delete Post</button>
                            </form>
                        </div>
                    </div>
                {{/each}}
            </div>
        </main>

        {{> footer}}
        <script src="" async defer></script>
    </body>
</html>
